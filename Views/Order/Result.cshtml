@model OrderProcessing.Models.Order
@{
    ViewData["Title"] = "Order Summary";
}

<h2 class="text-center mb-4">Order Result</h2>


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Your Order Summary</h5>
                <p class="card-text">Original Amount: <strong>@Model.Amount:C</strong></p>
                <p class="card-text">Customer Type: <strong>@Model.CustomerType</strong></p>
                <p class="card-text">Discount: <strong>@Model.Discount</strong></p>
                <p class="card-text">Total (with discount): <strong>@Model.FinalTotal:C</strong></p>
                <a asp-action="Index" class="btn btn-secondary mt-3">Back to Order</a>
            </div>
        </div>
    </div>
</div>