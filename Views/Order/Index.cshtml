@model OrderProcessing.Models.Order

@{
    ViewData["Title"] = "Place an Order";
}

<h2 class="text-center mb-4">Place Your Order</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Result" method="post" class="p-4 border rounded shadow-sm bg-light">
            <div class="form-group mb-3">
                <label asp-for="Amount" class="form-label">Order Amount</label>
                <input asp-for="Amount" class="form-control" placeholder="Enter amount" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CustomerType" class="form-label">Order Type</label>
                <select asp-for="CustomerType" class="form-select">
                    <option value="">-- Select Type --</option>
                    <option value="New">New</option>
                    <option value="Loyal">Loyal</option>
                </select>
                <span asp-validation-for="CustomerType" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Calculate & View Result</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}